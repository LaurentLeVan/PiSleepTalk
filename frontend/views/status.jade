extends layout

block content
	+modal('delete-file', 'Delete file', 'Are you sure to delete this file? You can\'t undo this.', 'Cancel', 'Delete file', 'delete-status-file-confirm')
	div.jumbotron.no-margin
		h1.display-3 Status
		p.lead Review the status of your PiSleepTalk instance. Page generated: #{pageData.generationDate}
		hr.m-y-2
		p Disk space: #{pageData.diskUsage.free}/#{pageData.diskUsage.total} GB
		p.lead
			a.btn.btn-primary.btn-lg.btn-reload(role='button') Reload page
			|  
			a.btn.btn-primary.btn-lg.btn-reload(role='button', href='/logs') View logs
	div#file-system
			table.table.table-bordered
				thead
					tr
						th.path Path
						th.size Size
						th.actions Actions
				tbody
					each file in pageData.files
						tr
							td.path #{file.path}
							td.size #{file.size} KB
							td.actions
								+button('', 'trash',    '',  'danger',  'delete',   'Delete file')